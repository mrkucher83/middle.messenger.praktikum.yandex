{{#if route.isChats}}
  <div class="empty"></div>
{{else}}
<nav class="menu">
    <a class="menu__item" href="/auth">Sign In</a>
    <a class="menu__item" href="/registration">Sign Up</a>
    <a class="menu__item" href="/chats">Chats</a>
    <a class="menu__item" href="/profile">Profile</a>
    <a class="menu__item" href="/profile_edit">Change the data</a>
    <a class="menu__item" href="/profile_password">Change the password</a>
    <a class="menu__item" href="/notFound">notFound</a>
    <a class="menu__item" href="/serverError">serverError</a>
</nav>
{{/if}}

{{#if route.isAuth}}
    <div class="messenger">{{{ auth }}}</div>
{{else if route.isReg}}
    <div class="messenger">{{{ registration }}}</div>
{{else if route.isChats}}
    <div class="messenger">{{> chats }}</div>
{{else if route.isErr}}
    <div class="messenger">{{{ serverError }}}</div>
{{else if route.isNotFound}}
    <div class="messenger">{{{ notFound }}}</div>
{{else if route.isProfile}}
    <div class="messenger">{{{ profile }}}</div>
{{else if route.isProfileEdit}}
    <div class="messenger">{{{ profileEdit }}}</div>
{{else if route.isProfilePass}}
    <div class="messenger">{{{ profilePassword }}}</div>
{{/if}}
