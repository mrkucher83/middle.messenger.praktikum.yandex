<div class="registration">
  <h2>SIGN UP</h2>
  <form action="" class="form-block">
    <div class="registration__inputs">
      {{> input type='text' name='first_name' label='First name' placeholder='Ivan'}}
      {{> input type='text' name='second_name' label='Second name' placeholder='Ivanov'}}
      {{> input type='text' name='login' label='Login' placeholder='IvanIvanov'}}
      {{> input type='email' name='email' label='Email' placeholder='ivanov@gmail.com'}}
      {{> input type='tel' name='phone' label='Phone' placeholder='+71234567890'}}
      {{> input type='password' name='password' label='Passord'}}
      {{> input type='password' name='password' label='Repeat password'}}
    </div>
    <div>
      {{> button text='SIGN UP' type='submit'}}
    </div>
  </form>
  <a href="/auth" class="auth__link">Sign In</a>
</div>
